@model BTL_Car.Models.BookingViewModel

@{
    ViewData["Title"] = "Book";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt xe</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial;
            padding: 10px;
            background: #f1f1f1;
        }

        /* Header/Blog Title */
        .header {
            padding: 70px;
            text-align: center;
            background: rgb(88, 189, 236);
            background-image: url("./img/a1.png");
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }

        .header h1 {
            font-size: 50px;
        }

        /* Style the top navigation bar */
        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        /* Style the topnav links */
        .topnav a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        /* Change color on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Create two unequal columns that floats next to each other */
        /* Left column */
        .leftcolumn {
            float: left;
            width: 75%;
        }

        /* Right column */
        .rightcolumn {
            float: left;
            width: 25%;
            background-color: #f1f1f1;
            padding-left: 20px;
        }

        .fakeimg {
            background-color: #aaa;
            width: 100%;
            padding: 20px;
            background-image: url("img/a.jpg");
            background-repeat: no-repeat;
            background-position: center;
        }

        /* Add a card effect for articles */
        .card1 {
            background-color: white;
            padding: 20px;
            margin-bottom: 20px;
        }

        /* Clear floats after the columns */
        .row::after {
            content: "";
            display: table;
            clear: both;
        }

        /* Footer */
        .footer {
            padding: 20px;
            text-align: center;
            background: #ddd;
            margin-top: 20px;
        }

        /* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other */
        @@mediascreen and (max-width: 1000px) {

            .leftcolumn,
            .rightcolumn {
                width: 100%;
                padding: 0;
            }
        }

        /* Responsive layout - when the screen is less than 400px wide, make the navigation links stack on top of each other instead of next to each other */
        @@mediascreen and (max-width: 600px) {
            .topnav a {
                float: none;
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="header" style="margin: 5px 25px; ">
        <h1>MinOto</h1>
        <p style="font-size: 25px;">Luôn hỗ trợ và chia sẻ trên mọi tuyến đường</p>
    </div>

    <div class="topnav" style="margin: 5px 25px ">
        <a asp-controller="Cars" asp-action="Home"><i class="fa fa-fw fa-home"></i>Trang chủ</a>
        <a asp-controller="Booking" asp-action="Index"><i class="fa fa-fw fa-search"></i>Đặt xe</a>
        <a asp-controller="Cars" asp-action="AboutUs"><i class="fa fa-fw fa-envelope"></i>Contact</a>
        @if (Context.Session.GetString("UserName") != null)
        {
            <a asp-controller="Users" asp-action="Logout" style="float:right">Logout</a>
            <a asp-controller="Users" asp-action="Index" style="float:right"> Xin Chào
                @Context.Session.GetString("UserName") <i class="fa fa-fw fa-user"></i></a>
        }
        else
        {
            <a asp-controller="Users" asp-action="Login" style="float:right">Login <i class="fa fa-fw fa-user"></i></a>
        }
    </div>
    <h1 style="margin: 5px 25px ">Book</h1>

    <h4 style="margin: 5px 25px ">BookingViewModel</h4>
    <hr />
    <div class="row" style="margin: 5px 25px ">
        <div class="col-md-4">
            <form asp-action="Book">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CarId" class="control-label"></label>
                    <input asp-for="CarId" class="form-control" />
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarMake" class="control-label"></label>
                    <input asp-for="CarMake" class="form-control" />
                    <span asp-validation-for="CarMake" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarModel" class="control-label"></label>
                    <input asp-for="CarModel" class="form-control" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookingDate" class="control-label"></label>
                    <input asp-for="BookingDate" class="form-control" />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RentalStartDate" class="control-label"></label>
                    <input asp-for="RentalStartDate" class="form-control" />
                    <span asp-validation-for="RentalStartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RentalEndDate" class="control-label"></label>
                    <input asp-for="RentalEndDate" class="form-control" />
                    <span asp-validation-for="RentalEndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalCost" class="control-label"></label>
                    <input asp-for="TotalCost" class="form-control" />
                    <span asp-validation-for="TotalCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div style="margin: 5px 25px">
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="footer" style="margin: 5px 25px">
        <h2>Footer</h2>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
